<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:background="#F5F5F5F5">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#fff"
      >
      <ImageView
          android:id="@+id/ivDetailProdctBack"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/baseline_keyboard_backspace_24"
          android:layout_gravity="center"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:gravity="center"
          android:text="@string/chitietsanpham"
          android:textSize="30sp"

          />
  </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/svDetailProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="14dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_add_img"
                    android:layout_marginEnd="15dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rclvImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/crdDetailProductNameProduct"
                >
                <TextView
                    android:id="@+id/tvDetailProductNameProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:background="#fff"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:id="@+id/crdDetailProductInfo"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    >
                    <TextView
                        android:id="@+id/tvDetailProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="@string/sanpham"
                        android:layout_marginVertical="8dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        >
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="@string/sku"
                            android:textColor="@color/xam"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/haicham"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="10dp"
                            />
                        <TextView
                            android:id="@+id/tvDetailProductSKU"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ass12"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        >
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="@string/barcode"
                            android:textColor="@color/xam"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/haicham"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="10dp"
                            />
                        <TextView
                            android:id="@+id/tvDetailProductBarcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ass12"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        >
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="@string/kh_i_l_ng"
                            android:textColor="@color/xam"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/haicham"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="10dp"
                            />
                        <TextView
                            android:id="@+id/tvDetailProductKhoiLuong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ass12"

                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        >
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="@string/n_v_t_nh"
                            android:textColor="@color/xam"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/haicham"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="10dp"
                            />
                        <TextView
                            android:id="@+id/tvDetailProductDonViTinh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ass12"

                            />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="8dp"
                android:id="@+id/crdDetailProductPrice"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"

                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_price_product"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/gi_s_n_ph_m"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="8dp"
                            />
                        <TextView
                            android:id="@+id/tvDetailProductTaxIncluded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ch_a_bao_g_m_thu"

                            android:textSize="18sp"
                            android:layout_marginHorizontal="8dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lltvDetailTaxable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/thu_u_ra"
                                android:textSize="16sp"
                                android:textColor="@color/xam"
                                />
                            <TextView
                                android:id="@+id/tvDetailOutputTax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10%"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/thu_u_v_o"
                                android:textSize="16sp"
                                android:textColor="@color/xam"
                                />
                            <TextView
                                android:id="@+id/tvDetailInputTax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_10"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gi_b_n_l"
                                android:textSize="16sp"
                                android:textColor="@color/xam"
                                />
                            <TextView
                                android:id="@+id/tvDetailProductRetailPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_0"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gi_b_n_bu_n"
                                android:textSize="16sp"
                                android:textColor="@color/xam"
                                />
                            <TextView
                                android:id="@+id/tvDetailProductWholesalePrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_0"
                                />
                        </LinearLayout>

                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gi_nh_p"
                                android:textSize="16sp"
                                android:textColor="@color/xam"
                                />
                            <TextView
                                android:id="@+id/tvDetailProductImportPrice"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_0"
                                />
                        </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="8dp"
                android:id="@+id/crvDetailProductWareHouse"
                >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              >
              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/baseline_home_24"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/kho_h_ng"
                  android:textSize="18sp"
                  android:textStyle="bold"
                  android:layout_marginStart="8dp"
                  />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/chi_nh_nh_m_c_nh"
                  android:textSize="18sp"
                  android:layout_marginStart="8dp"
                  android:layout_weight="1"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="@string/t_n_kho"
                  android:textSize="18sp"
                  android:layout_marginStart="8dp"
                  />
              <TextView
                  android:id="@+id/tvDetailProductTonkho"
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="18sp"
                  android:text="@string/_0"
                  />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              >

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/c_th_b_n"
                  android:textSize="18sp"
                  android:layout_marginStart="8dp"
                  />
              <TextView
                  android:id="@+id/tvDetailProductCotheban"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:textSize="18sp"
                  android:text="@string/_0"
                  />

          </LinearLayout>

      </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="8dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:id="@+id/rlDetailProductAddInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvDetailProductAddInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/th_m_th_ng_tin"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivDetailProductDownOrUp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_down"
                            app:tint="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ivDetailProductDownOrUp"
                            android:layout_marginTop="4dp"
                            android:text="@string/m_t_ph_n_lo_i_s_n_ph_m"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#290E0E" />
                    <LinearLayout
                        android:id="@+id/llDetailProductAddInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="@string/lo_i_s_n_ph_m"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvDetailProductProductCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="@string/gach"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/xam" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="@string/nh_n_hi_u"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvDetailProductBrand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="@string/gach"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/xam" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="@string/m_t"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvDetailProductDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="@string/gach"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/xam" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llDetailAddFooterInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="12dp">

                        <ImageView
                            android:background="#F4BFBF"
                            android:id="@+id/ivDetailSellable"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_check_24" />

                        <TextView
                            android:id="@+id/tvDetailSellable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="@string/cho_ph_p_b_n"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="8dp"
                android:id="@+id/crdDetailProductVariantProduct"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phi_n_b_n_s_n_ph_m"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#120D0D" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rclvDetailProductVariantOrProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crdDetailStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/ivDetailStatus"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/baseline_verified_user_24" />

                    <TextView
                        android:id="@+id/tvDetailStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="@string/ang_giao_d_ch"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>