<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemlistproduct"
    android:background="@drawable/backround_linner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/ivListProductImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="8dp"
            android:layout_gravity="center"

            android:contentDescription="TODO" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvListProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aosoadooasodoasod"
                android:paddingRight="10dp"
                android:textSize="20dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvListProductVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="17dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" phiên bản"
                    android:textColor="#888484"
                    android:textSize="17dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="20dp"
                    android:layout_marginHorizontal="10dp"
                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Có thể bán "
                    android:textColor="#888484"
                    android:textSize="17dp"
                    />
                <TextView
                    android:id="@+id/tvListProductCotheban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textSize="17dp"
                    android:textColor="@color/blue"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>